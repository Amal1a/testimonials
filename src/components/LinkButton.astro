---
const { variant, size, linkTo, text } = Astro.props;
---

<a href={linkTo} class={variant + " " + size}>{text}</a>

<style>
  .menu {
    background-color: rgb(201, 29, 13);
    color: white;
    text-decoration: none;
    text-align: center;
  }

  .menu:hover {
    background-color: white;
    color: green;
  }

  .medium {
    font-size: 1rem;
    padding: 0.3rem;
    width: 100px;

    border-radius: 10px;
  }

  .large {
    font-size: 3rem;
    padding: 0.3rem;
    width: 100px;

    border-radius: 10px;
  }

  .linkDr {
    background-color: rgb(255, 0, 191);
    color: white;
    text-decoration: none;
    text-align: center;
  }

  .linkDr:hover {
    background-color: white;
    color: rgb(19, 0, 128);
  }
</style>
